<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Memo:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<% commentable = @book %>
<h3>Comments</h3>
<% if commentable.comments.any? %>
  <ul>
  <% commentable.comments.each do |comment| %>
    <li>
      <%= comment.name %>: 
      <%= comment.memo %>
      <%= link_to 'Edit', edit_book_comment_path(commentable, comment) %>
      <%= link_to "Destroy", [commentable, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
  </ul>
<% end %>

<%= form_for([commentable, commentable.comments.build]) do |f| %>
  <p>name: 
    <%= f.text_field :name %>
  </p>
  <p>comment: 
    <%= f.text_field :memo %>
  </p>
  <p><%= f.submit %></p>
<% end %>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
